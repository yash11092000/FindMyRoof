    /* ✅ Pulse Animation */
    .animate-icon {
        font-size: 80px;
        animation: pulse 1.5s infinite;
    }
    @@keyframes pulse {
        0%

    {
        transform: scale(1);
        opacity: 1;
    }

    50% {
        transform: scale(1.1);
        opacity: 0.7;
    }

    100% {
        transform: scale(1);
        opacity: 1;
    }

    }
</style>
