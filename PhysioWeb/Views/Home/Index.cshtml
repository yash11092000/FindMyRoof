@section Scripts {
	<script>
					new Choices('#propertyType', {
		  removeItemButton: true,
		  duplicateItemsAllowed: false
		});

		new Choices('#bedrooms', { removeItemButton: true });
		new Choices('#amenities', { removeItemButton: true });
	</script>
}