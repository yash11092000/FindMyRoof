					<div class="col-md-3">
						<label for="bedrooms" class="form-label fw-bold">Bedrooms</label>
						<select multiple class="form-select" id="bedrooms"></select>
					</div>

					<!-- Rental Type -->
					<div class="col-md-3">
						<label for="rentalType" class="form-label fw-bold">Rental Type</label>
						<select multiple class="form-select" id="rentalType"></select>
					</div>

					<!-- Property Category -->
					<div class="col-md-3">
						<label for="propertyCategory" class="form-label fw-bold">Property Category</label>
						<select multiple class="form-select" id="propertyCategory"></select>
					</div>
				</div>

				<div class="row mt-3">
					<!-- Amenities -->
