@model PhysioWeb.Models.PropertyCategoryMaster
@{
	ViewBag.Title = "Property Category";
}
<h3>Property Category</h3>

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
	<div class="card shadow p-4" style="width: 400px;">
		<h4 class="mb-4 text-center">Category Master</h4>

		<form id="CategoryForm">
			<div class="mb-3">
				<label for="categoryName" class="form-label">Category Name</label>
				<input type="text" id="CategoryName" name="CategoryName" class="form-control" required />
			</div>

			<div class="mb-3 form-check">
				<input type="checkbox" id="IsActive" name="IsActive" class="form-check-input" />
				<label for="IsActive" class="form-check-label">Is Active</label>
			</div>

			<button type="button" class="btn btn-primary w-100" id="SavePropCategory">Save</button>
		</form>

		<div id="resultMsg" class="mt-3 text-center"></div>
	</div>
</div>

@section Scripts {
	<script>

		$("#SavePropCategory").on("click",function(){
			var CategoryName = $("#CategoryName")
			if(CategoryName.val() == ""){
				CategoryName.focus();
				notyf.error("Please Enter Product Category");
			}
			else{
			$.ajax({
				url: '/Master/SavePropCategory', // make sure URL matches your controller
				method: 'POST',
				data: $("#CategoryForm").serialize(),
				success: function (response) {
					if (response) {
						notyf.success("Product Category Added Successfully");
					} else {
						notyf.error(response.message || "Failed to save.");
					}
				},
				error: function () {
					notyf.error("Some Error Occurred While Saving");
				}
			});

			}

		})

	</script>
}